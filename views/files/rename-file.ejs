<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>

        <form class="product-form" role="form" action="/user/rename/<% file._id %>" method="POST"
            enctype="multipart/form-data">
            <div class="form-control">
                <p class="text-uppercase pull-center">Change name</p>

                <div class="form-group">
                    <input
                        class="<%= validationErrors.find(e => e.param === 'name') ? 'invalid' : '' %> form-control input-lg"
                        type="text" name="name" id="name"
                        value="<% if (editing || hasError) { %><%= file.name %><% } %>" placeholder="New name">
                </div>
                <div>
                    <% if (editing) { %>
                    <input type="hidden" value="<%= file._id %>" name="fileId">
                    <% } %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="submit" class="btn btn-lg btn-success" value="Rename">
                </div>
            </div>
        </form>


    </main>
    <%- include('../includes/end.ejs') %>