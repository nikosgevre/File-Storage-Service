<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/list-grid.css">
<link rel="stylesheet" href="/css/forms.css">

</head>

<!-- style="height:300px" -->
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>

        <form class="product-form" role="form" action="/user/create-folder" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <p class="text-uppercase pull-center">Folder name</p>

                <div class="form-group">
                    <input
                        class="<%= validationErrors.find(e => e.param === 'name') ? 'invalid' : '' %> form-control input-lg"
                        type="text" name="name" id="name" value="New folder" placeholder="New folder">
                </div>
                <div>
                    <% if (editing) { %>
                    <input type="hidden" value="<%= file._id %>" name="fileId">
                    <% } %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="submit" class="btn btn-lg btn-success" value="Create folder">
                </div>
        </form>


    </main>
    <%- include('../includes/end.ejs') %>